@model List<List<DziennikUcznia.Models.Grade>>

@{
    ViewData["Title"] = "Index";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<table>
    <thead>
        <tr>

        </tr>
    </thead>
    <tbody>
        @for(int i=0;i<Model.Count;i++)
        {
            <tr>
                <th>
                @Html.DisplayName(((List<Subject>)ViewBag.Subjects)[i].Name)
                    </th>
            </tr>
            <tr>
                <td>
            @foreach(var grade in Model[i])
            {
                 @Html.DisplayFor(model=>grade.Value) 
                <text>,</text>
            }
                </td>
            </tr>
        }
    </tbody>

</table>
